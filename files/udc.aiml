<?xml version="1.0" encoding="UTF-8"?>
<aiml>
   <category>
      <pattern>*</pattern>
      <template>
         <!--<delay>1.5</delay>-->
         <random>
            <li>I'm not sure how to respond to that.</li>
            <li>I don't know what you mean.</li>
         </random>
      </template>
   </category>

   <category>
      <pattern>Greetings</pattern>
      <template>
         <random>
            <li>Hello</li>
            <li>Hi</li>
            <li>/waves</li>
            <li>Greetings</li>
         </random>
      </template>
   </category>

   <category>
      <pattern>Hi #</pattern>
      <template>
         <srai>Greetings</srai>
      </template>
   </category>

   <category>
      <pattern>Good morning</pattern>
      <template>
         <srai>Greetings</srai>
      </template>
   </category>

   <category>
      <pattern>Good evening</pattern>
      <template>
         <srai>Greetings</srai>
      </template>
   </category>

   <category>
      <pattern>Hello #</pattern>
      <template>
         <srai>Greetings</srai>
      </template>
   </category>

   <category>
      <pattern>My name is *</pattern>
      <template>
         <think><set name="username"><formal></formal></set></think>
         <random>
            <li>
                <delay>3.5</delay>
                Hello <set name="username"><formal><star/></formal></set>.
                I'm Cury. That's short for Curiosity. :)
            </li>
            <li>
                <delay>2</delay>
                Hi <set name="username"><formal><star/></formal></set>.
                I'm Cury.
            </li>
            <li>
                <delay>2.5</delay>
                Greetings <set name="username"><formal><star/></formal></set>.
                I'm Curiosity. :)
            </li>
         </random>
      </template>
   </category>

   <category>
      <pattern># I am called *</pattern>
      <template>
         <srai>My name is <star index="2"/></srai>
      </template>
   </category>

   <category>
      <pattern>I am *</pattern>
      <template>
         <srai>My name is <star/></srai>
      </template>
   </category>

   <category>
      <pattern># how are you ^</pattern>
      <template>
         <delay>2</delay>
         I'm doing well, thanks!
      </template>
   </category>

   <category>
      <pattern>Bye</pattern>
      <template>
         <delay>1</delay>
         Bye! It was nice meeting you.
      </template>
   </category>

   <category>
      <pattern>Farewell</pattern>
      <template>
         <srai>bye</srai>
      </template>
   </category>

   <category>
      <pattern>goodbye</pattern>
      <template>
         <srai>bye</srai>
      </template>
   </category>

   <category>
      <pattern>let us talk about *</pattern>
      <template>
         <delay>1.5</delay>
         Alright, let's talk about <set name="topic"><star/></set>
      </template>
   </category>

   <category>
      <pattern>What are we talking about</pattern>
      <template>
         We're talking about <topicstar/>.
      </template>
   </category>

   <!-- for debugging -->
   <category>
      <pattern>topic</pattern>
      <template>
         <srai>What are we talking about</srai>
      </template>
   </category>

   <category>
      <pattern>What are we talking about</pattern>
      <template>
         We're talking about <topicstar/>.
      </template>
   </category>

   <category>
      <pattern># that is a lot</pattern>
      <template>
         Is it? It doesn't seem like that much to me.
      </template>
   </category>

   <category>
      <pattern>interesting</pattern>
      <template>
         I'm glad you think so.
      </template>
   </category>

   <category>
      <pattern># that is an interesting perspective</pattern>
      <template>
         <srai>interesting</srai>
      </template>
   </category>
</aiml>